	</script>
	<title>Eat-Da-Burger!</title>
</head>

<body>
	<div class="row">

		<div class="col-12">
			<div class="jumbotron jumbotron-fluid">
				<div class="container">
					<h1 class="display-3">EAT DAH BURGER</h1>
					<p class="lead">Enter a burger name into the text box and add it to the list. Eat a buger using the "Nom Nom" button!</p>
					<hr class="my-2">
				</div>
			</div>
		</div>

		<div class="col-1"></div>
		{{{ body }}}
		<div class="col-1"></div>

		<div class="col-1"></div>
		<div class="col-10">
			<form class="create-form">
				<div class="input-group mb-3">
					<input id="addBurgerName" type="text" class="form-control" placeholder="Add a burger.."
						aria-describedby="button-addon2">
					<div class="input-group-append">
						<button id="addBurgerBtn" class="btn btn-outline-primary" type="submit" id="button-addon2">Add
							burger</button>
					</div>
				</div>
			</form>
		</div>
		<div class="col-1"></div>



	</div>

	{{!-- <script src="../../public/burger.js" type="text/javascript"> --}}

	<script>
		$('#addBurgerBtn').on('click', function (event) {
			event.preventDefault();
			let newBurger = {
				name: $('#addBurgerName').val().trim()
			}
			$.ajax('/api/burgers', {
				type: "POST",
				data: newBurger
			}).then(location.reload())
		});
	</script>

</body>

</html>